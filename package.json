{
  "name": "ts-template",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "module": "./src/index.ts",
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=20",
    "bun": ">=1.3.1"
  },
  "engineStrict": true,
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist",
    "dev": "bun run ./src/index.ts",
    "test": "bun test --coverage --threshold=70",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bun run lint:base && bun run lint:ts",
    "lint:base": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "lint:ts": "bunx eslint \"{src,scripts}/**/*.ts\" --max-warnings=0",
    "deadcode": "bunx knip",
    "prepare": "simple-git-hooks",
    "env:print": "bun run scripts/env/print.ts",
    "env:check": "bun run scripts/env/check.ts",
    "logs:pretty": "LOG_LEVEL=debug bun run dev"
  },
  "dependencies": {
    "neverthrow": "^8.2.0",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bun": "^1.3.1",
    "bun-types": "^1.3.1",
    "eslint": "^9.39.1",
    "knip": "^5.67.1",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
      "bunx biome check --write --no-errors-on-unmatched --ignore-path .gitignore"
    ],
    "src/**/*.ts": [
      "bunx eslint --max-warnings=0 --"
    ],
    "scripts/**/*.ts": [
      "bunx eslint --max-warnings=0 --"
    ],
    "*.{md,mdx,yml,yaml}": [
      "bunx biome check --write --no-errors-on-unmatched --ignore-path .gitignore"
    ]
  }
}
