{
  "name": "ts-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "module": "./src/index.ts",
  "packageManager": "bun@1.2.18",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist",
    "dev": "bun run ./src/index.ts",
    "test": "bun test --coverage --threshold=70",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bun run lint:base && bun run lint:ts",
    "lint:base": "bunx biome check .",
    "lint:fix": "bunx biome check --apply .",
    "lint:ts": "bunx eslint \"src/**/*.ts\" --max-warnings=0",
    "deadcode": "bunx knip",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "neverthrow": "^6.0.1",
    "pino": "^9.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.12.0",
    "knip": "^5.30.2",
    "lint-staged": "^15.2.8",
    "pino-pretty": "^11.2.2",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
      "bunx biome check --apply --no-errors-on-unmatched"
    ],
    "src/**/*.ts": [
      "bunx eslint --max-warnings=0 --"
    ]
  }
}
