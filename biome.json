{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "files": {
    "includes": ["**", "!**/dist", "!**/coverage", "!**/node_modules", "!**/.repoprompt"]
  },
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "style": {
        "useConst": "error",
        "noDefaultExport": "error",
        "noNonNullAssertion": "error",
        "noUselessElse": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noDoubleEquals": "error"
      },
      "nursery": {
        "useImportType": "error"
      }
    }
  }
}
